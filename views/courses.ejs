<%- include("partials/header"); -%>

  <main class="course_page">

    <!-- Courses Page -->
    <section>
      <div class="section_title">
        <h1 id="tab_title">Course Catelogue</h1>
      </div>
      <div class="section_title_underline"></div>
      <div class="courses_container container" id="courses_container">
        <% coursesData.forEach((course)=> { %>
          <div class="courses_card">
            <div class="card_header" id="course_header"> <img src="<%= course.image %>"/> </div>
            <div class="card_content">
              <h3 class="card_title_text" id="title">
                <%= course.title %>
              </h3>
              <p class="card_excerpt" id="excerpt">
                <%= course.description.substring(0, 160) + " >>>" %>
              </p>
              <button class="ripple_button"> Explore </button>
            </div>
          </div>
        <% }) %>


        
